<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6D76A8"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lemon">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:fontFamily="cursive"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:text="Text To Speech"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <ImageButton
            android:id="@+id/refresh"
            android:layout_width="47dp"
            android:layout_height="43dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="206dp"
            android:layout_marginStart="206dp"
            android:layout_marginTop="-3dp"
            android:layout_toEndOf="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:background="@color/lemon"
            android:onClick="refresh"
            android:src="@drawable/ic_refresh" />

    </RelativeLayout>

    <EditText
        android:id="@+id/edtText"
        android:layout_width="347dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="Enter text to speech"
        android:inputType="textCapSentences"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btnSpeech"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_button"
        android:drawableEnd="@drawable/ic_action_name"
        android:drawableRight="@drawable/ic_action_name"
        android:drawableTint="#918E8E"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:shadowColor="#D9E375"
        android:text="Read aloud"
        android:textColor="@color/black" />


</LinearLayout>